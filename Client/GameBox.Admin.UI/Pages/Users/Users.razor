<div class="row">
    <div class="offset-md-2 col-md-6">
        <h2>Search Users</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-2 offset-md-2">
        <SearchForm OnTextChange="SearchUsers" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Lock</th>
                    <th>Admin Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>
                            @if (!user.IsLocked)
                            {
                                <button
                                    class="btn btn-outline-warning btn-sm"
                                    @onclick="(() => OnLock(user.Username))">
                                    Lock
                                </button>                                
                            }
                            else if (user.IsLocked)
                            {
                                <button
                                    class="btn btn-outline-success btn-sm"
                                    @onclick="(() => OnUnlock(user.Username))">
                                    Unlock
                                </button>                                
                            }
                        </td>
                        <td>
                            @if (user.IsAdmin)
                            {
                                <button
                                    class="btn btn-outline-warning btn-sm"
                                    @onclick='(() => OnRemoveRole(user.Username, "Admin"))'>
                                    Remove Role
                                </button>                                
                            }
                            else if (!user.IsAdmin)
                            {
                                <button
                                    class="btn btn-outline-success btn-sm"
                                    @onclick='(() => OnAddRole(user.Username, "Admin"))'>
                                    Add Role
                                </button>                                
                            }
                        </td>
                    </tr>                    
                }
            </tbody>
        </table>
    </div>
</div>