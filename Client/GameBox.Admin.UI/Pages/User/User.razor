<div class="row">
    <div class="offset-md-3 col-md-3">
        <EditForm Model="@userForm" OnValidSubmit="OnCreateUser">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="username">Username</label>
                <InputText
                    class="form-control"
                    id="username"
                    placeholder="Username"
                    @bind-Value="userForm.Username" />
                <ValidationMessage For="@(() => userForm.Username)" />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <InputText
                    type="password"
                    class="form-control"
                    id="password"
                    placeholder="Password"
                    @bind-Value="userForm.Password" />
                <ValidationMessage For="@(() => userForm.Password)" />
            </div>
            <div class="form-group">
                <label for="repeatPassword">Repeat Password</label>
                <InputText
                    type="password"
                    class="form-control"
                    id="repeatPassword"
                    placeholder="Repeat Password"
                    @bind-Value="userForm.RepeatPassword" />
                <ValidationMessage For="@(() => userForm.RepeatPassword)" />
            </div>
            <button type="submit" class="btn btn-outline-dark">
                Create New User
            </button>
        </EditForm>
    </div>
</div>